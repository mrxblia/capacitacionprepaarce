        <div id="page-wrapper" >
            <div id="page-inner">
                <div class="row">
                    <div class="col-md-12">
                     <h2>Panel de certificaciones</h2>   
                    </div>
                    <div class="col-md-12">
                        <form class="form-inline" id="register">
                            <div class="form-group">
                                <input type="text" class="form-control"  id="name" name="name" placeholder="Nombre">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="lastnames" name="lastnames" placeholder="Apellidos">
                            </div>
                            <div class="form-group">
                                <select class="form-control" id="opciones" name="courseid">     
                                    <%
                                        dataCertif.forEach((dat)=>{
                                    %> 
                                    <option value="<%= dat.id%>"><%= dat.name%></option>
                                    
                                    <%
                                        });
                                    %>
                                </select>
                            </div>
                            <input type="hidden" class="form-control" id="id__" name="id__ placeholder="Apellidos">
                            <div class="form-group">
                                <label for="fechaInicio">Inicio</label>
                                <input type="date" class="form-control" id="dayStart" name="fechaInicio">
                            </div>
                            <div class="form-group">
                                <label for="fechaFinalizacion">Fin</label>
                                <input type="date" class="form-control" id="dayFinish" name="fechaFinalizacion">
                            </div> 
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Registrar</button>
                            </div>
                        </form>
                        <div id="enviadoCorrectamente" style="display: none;">
                            <i class="fa fa-check-circle"></i> Enviado correctamente
                        </div>
                    </div>
                </div>              
                 <!-- /. ROW  -->
                  <hr />
                  <div class="row">
                  
                    <div class="col-md-5">
                        <h5>Certificaciones aprobadas</h5>
                        <table id="table_index" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr> 
                                    <th>Nombre</th> 
                                    <th>Curso</th>
                                    <th>Inicio</th>
                                    <th>Finalizacion</th>
                                    <th> PDF</th>
                                    <th> QR</th>
                                </tr>
                            </thead>
                            <tbody>
                                
                        <%
                            certificationsTrue.forEach((dat)=>{
                        %>    
                        <tr>  
                            <td><a target="_blank" href="/certification/profile/<%= dat.id%>"><%= dat.name%> <%= dat.lastnames%></a></td> 
                            <td>
                                <% if (dat.id_certification) { %>
                                  <%= dat.id_certification.name %>
                                <% } else { %>
                                  Eliminado
                                <% } %>
                              </td>
                              
                            <td><%= dat.start.toLocaleDateString()%></td>
                            <td><%= dat.finish.toLocaleDateString()%></td>
                            
                            <td> <a href="/pdf/generate_validation/<%=dat.id %>">
                                <i class="fas fa-download"></i>  
                            </a></td>
                            <th>
                                <img src="<%= dat.qr %>" height="50px" alt="Código QR">
                                <br>
                                <a href="<%= dat.qr %>" download="<%= dat.name%><%= dat.folio%>.png">Descargar</a>
                            </th>
                            
                        </tr> 
                        <%
                            });
                        %>
                            </tbody>
                        </table>

                    </div>
                    <div class="col-md-5">
                        <h5>Certificaciones en proceso de validacion</h5>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr> 
                                        <th>Nombre</th> 
                                        <th>Curso</th>
                                        <th>Inicio</th>
                                        <th>Finalizacion</th>
                                        <th>PDF</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    
                                <%
                                    certificationsFalse.forEach((dat)=>{
                                %>    
                                <tr> 
                                    <td><%= dat.name%> <%= dat.lastnames%></td> 
                                    <td>
                                        <% if (dat.id_certification) { %>
                                          <%= dat.id_certification.name %>
                                        <% } else { %>
                                          Eliminado
                                        <% } %>
                                      </td>
                                    <td><%= dat.start.toLocaleDateString()%></td>
                                    <td><%= dat.finish.toLocaleDateString()%></td>
                                    <td> <a href="/pdf/generate/<%= dat.id%>">
                                        <i class="fas fa-download"></i>  
                                    </a></td>
                                    <td>
                                        <a href="/validations/certification/<%= dat.id%>/"><button type="button" class="btn btn-primary">Validar</button></a>
                                    </td>
                                    <td>
                                        <a href="/validations/certification/delete/<%= dat.id%>/"><button type="button" class="btn btn-red">Eliminar</button></a>
                                    </td>
                                </tr> 
                                <%
                                    });
                                %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                 <!-- /. ROW  -->           
    </div>
             <!-- /. PAGE INNER  -->
            </div>
